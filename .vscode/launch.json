    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with -help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "-help"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch with -config",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "-config=demo-animation.yaml"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch no args",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "console": "integratedTerminal"
        }
    ]
